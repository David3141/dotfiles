// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "EmptyPane || Editor || Terminal",
    "bindings": {
      "ctrl-/": "terminal_panel::ToggleFocus"
    }
  },
  {
    "bindings": {
      // "cmd-e": "file_finder::Toggle",
      // "space b b": "vim::GoToPreviousTab"
    }
  },
  {
    "context": "EmptyPane || ProjectPanel || (VimControl && !menu)",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space s g": "pane::DeploySearch",
      "space s r": ["pane::DeploySearch", { "replace_enabled": true }]
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "space c a": "editor::ToggleCodeActions",
      "space -": "pane::SplitAndMoveDown",
      "space |": "pane::SplitAndMoveRight",
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem",
      "space b d": "pane::CloseActiveItem",
      "g h": "vim::FirstNonWhitespace",
      "g l ": "vim::EndOfLine",
      "s": ["vim::PushSneak", {}],
      "S": ["vim::PushSneakBackward", {}],
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "space w d": "pane::CloseAllItems",
      "space e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": { "space e": "workspace::CloseActiveDock" }
  },
  {
    "context": "vim_mode == normal && Editor",
    "bindings": {
      "space j": "editor::MoveLineDown",
      "space k": "editor::MoveLineUp"
    }
  },
  {
    "context": "vim_mode == visual && Editor",
    "bindings": {
      "J": "editor::MoveLineDown",
      "K": "editor::MoveLineUp"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "Q": "vim::MiniQuotes",
      "B": "vim::MiniBrackets"
    }
  }
]
